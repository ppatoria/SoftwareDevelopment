<!-- 
     (1) Property Trigger. 
     (2) Data     Trigger. 
     (3) Event    Trigger. 
-->


<!-- Property Trigger 
     ***************** 
     Imagine that you want the text in each Button from the About dialog in
     Listing 3.1 to turn blue when the mouse pointer hovers over it. 
-->
<Button MinWidth = "75" Margin = "10">
  <Button.Style>
    <Style TargetType = "{x:Type Button}">      
      <Style.Triggers>
	<Trigger  Property = "IsMouseOver" Value = "True">
	  <Setter Property = "Foreground"  Value = "Blue"/>
	</Trigger>
      </Style.Triggers>
    </Style>
  </Button.Style>
  OK
</Button>